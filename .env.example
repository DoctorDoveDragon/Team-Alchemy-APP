# Environment Variables for Team Alchemy

# Application
APP_NAME=Team Alchemy
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database
DATABASE_URL=sqlite:///./team_alchemy.db
# DATABASE_URL=postgresql://user:password@localhost:5432/team_alchemy

# Redis/Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production-replace-with-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ML Models
MODEL_PATH=./models
ENABLE_ML=True

# Features
ENABLE_SHADOW_WORK=True
ENABLE_RECOMMENDATIONS=True
MAX_RECOMMENDATIONS=10
