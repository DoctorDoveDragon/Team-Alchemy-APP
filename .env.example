# Environment Variables for Team Alchemy APP

# Application
APP_NAME=Team Alchemy APP
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=development

# Backend API
API_HOST=0.0.0.0
API_PORT=5000
API_PREFIX=/api

# Database (PostgreSQL)
DATABASE_URL=postgresql://teamalchemy:teamalchemy@db:5432/teamalchemy
# For local development:
# DATABASE_URL=postgresql://teamalchemy:teamalchemy@localhost:5432/teamalchemy

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security (REQUIRED - MUST BE SET BY REPOSITORY OWNERS!)
JWT_SECRET=change-this-to-a-secure-random-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
VITE_API_URL=http://localhost:5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Features
ENABLE_DOCS=True
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
