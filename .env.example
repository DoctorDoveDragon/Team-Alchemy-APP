# Environment Variables for Team Alchemy APP

# Application
APP_NAME=Team Alchemy APP
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=development

# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Railway Port (Railway sets this automatically)
# PORT is set by Railway and should not be manually configured
# PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql://teamalchemy:teamalchemy@db:5432/teamalchemy
# For local development with SQLite:
# DATABASE_URL=sqlite:///./team_alchemy.db
# For Railway PostgreSQL (Railway provides this automatically):
# DATABASE_URL=postgresql://user:password@host:port/dbname
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security (REQUIRED - MUST BE SET IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production
# JWT_SECRET is supported for backward compatibility (use SECRET_KEY for new deployments)
# JWT_SECRET=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# For Railway production (update with your frontend domain):
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend
VITE_API_URL=http://localhost:5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ML Models
MODEL_PATH=./models
ENABLE_ML=True

# Features
ENABLE_DOCS=True
ENABLE_SHADOW_WORK=True
ENABLE_RECOMMENDATIONS=True
MAX_RECOMMENDATIONS=10
